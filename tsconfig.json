{
  "compilerOptions": {
    "baseUrl": "./",
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "paths": {
      "@app": ["src/shared/app.tsx"],
      "@src/*": ["src/*"],
      "@common-img/*": ["src/common/img/*"],
      "@common-style/*": ["src/common/style/*"]
    }
  },
  "include": [
    "src/**/*",
    "custom.d.ts"
  ],
  "exclude": ["node_modules", "build"]
}